<!DOCTYPE html>
<html>
  <head>
    <title>COVID-19 TRACKING</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
    />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <style>
      #map {
        width: 600px;
        height: 400px;
        vertical-align: middle;
      }
    </style>
    <style>
      table,
      td,
      th {
        border: 1px solid #ddd;
        text-align: left;
      }

      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        padding: 15px;
      }
    </style>
  </head>
  <body>
    <form action="" method="POST">
      <label for="gsearch">Search Country:</label>
      <input type="search"  name="csearch" />
      <label for="datemax">Enter a date :</label>
      <input
        type="date"
        
        name="datemax"
        max="2020-12-9"
      />

      <input type="submit" />
    </form>
    <table>
      <tr>
        <th>Country</th>
        <th>Death</th>
        <th>Recovered</th>
      </tr>
      <tr>
        <td>
          <div id="country-1">C-test</div>
        </td>
        <td>
          <div id="country-1">D-test</div>
        </td>
        <td>
          <div id="country-1">R-test</div>
        </td>
      </tr>
    </table>
    <div id="map" ></div>
    <script >
      var map = L.map("map").setView([13, 100], 6);
      L.tileLayer(
        "https://api.maptiler.com/maps/bright/{z}/{x}/{y}.png?key=PbUMTkRHEbFafUVipGDG",
        {
          attribution:
            '<a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>',
        }
      ).addTo(map);
      

      var circle = L.circle([13, 100], {
        color: 'red',
        fillColor: "#f03",
        fillOpacity: 0.5,
        radius: 100000,
      }).addTo(map);
    </script>
  </body>
</html>
